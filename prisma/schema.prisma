// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "dart run example/main.dart"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
  role  Role   @default(USER)
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

enum Role {
  USER
  ADMIN
}

// issue: https://github.com/odroe/prisma-dart/issues/227
model AccountConnection {
  id         String  @id @db.Uuid
  user_id    String  @db.Uuid
  account_id String
  provider   String
  data       Json
  email      String?

  @@unique([account_id, user_id, provider], map: "account_connections_unique_constraint")
  @@map("account_connections")
}
